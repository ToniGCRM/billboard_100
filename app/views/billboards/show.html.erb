<h1>Billboards</h1>

<h3>
<%= @billboard.name %>
<%= @billboard.genre %>
<%= @billboard.number %>
</h3>
<a class="waves-effect waves-light btn" <%= link_to 'Create Artist', new_billboard_artist_path(@billboard) %></a>
<a class="waves-effect waves-light btn" <%= link_to 'Back', billboards_path %></a>
<br/>
<table class="highlight">
<thead class="cyan-text text-lighten-2">
<tr>
  <th> Artist Name </th>
  <th> Ranked Songs </th>
  </tr>
</thead>

<tbody class="red-text text-lighten-2">

<% @billboard.artists.each do |artist| %>
  <tr>
  <td><%= link_to artist.name, [@billboard, artist] %></td>
  <td><%= link_to 'Songs', artist_songs_path(artist) %></td>
  </tr>
<%end%>
</tbody>
</table>


